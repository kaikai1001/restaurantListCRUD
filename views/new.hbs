<div class="container">
  <form action="/restaurants" method="POST">
    <div class="mb-3">
      <label for="name" class="form-label">餐廳名稱</label>
      <input type="text" class="form-control" id="name" placeholder="餐廳名稱" name="name" required>
    </div>
    <div class="mb-3">
      <label for="name_en" class="form-label">餐廳英文名稱</label>
      <input type="text" class="form-control" id="name_en" placeholder="餐廳英文名稱" name="name_en" required>
    </div>

    <div class="mb-3">
      <label for="category" class="form-label">類別</label>
      <input type="text" class="form-control" id="category" placeholder="選擇餐廳類型" list="categoryOptions" name="category"
        required />
      <datalist id="categoryOptions">
        <option>日式</option>
        <option>美式</option>
        <option>義式</option>
        <option>酒吧</option>
        <option>咖啡</option>
      </datalist>
    </div>

    <div class="mb-3">
      <label for="image" class="form-label">圖片</label>
      <input type="url" class="form-control" id="image" name="image" placeholder="https://" required>
    </div>

    <div class="mb-3">
      <label for="location" class="form-label">地址</label>
      <input type="text" class="form-control" id="location" placeholder="餐廳地址" name="location" required>
    </div>
    
    <div class="mb-3">
      <label for="phone" class="form-label">電話
      </label>
      <input type="text" class="form-control" id="phone" placeholder="02 123456789" name="phone" required>
    </div>

    <div class="mb-3">
      <label for="google_map" class="form-label">Google Map
      </label>
      <input type="url" class="form-control" id="google_map" placeholder="http://" name="google_map" required>
    </div>

    <div class="mb-3">
      <label for="rating" class="form-label">評分
      </label>
      <input type="number" class="form-control" min="0" max="5" step="0.1" id="raring" placeholder="0~5" name="rating" required>
    </div>

    <div class="mb-3">
      <label for="description" class="form-label">描述
      </label>
      <input type="text" class="form-control" id="description" placeholder="介紹餐廳" name="description" required>
    </div>

    <div class="text-center">
      <button type="submit" class="btn btn-primary">
        新增餐廳
      </button>
      <a href="/">
      <button  type="button" class="btn btn-outline-secondary">
        返回首頁
      </button>
      </a>
    </div>
  </form>
</div>
